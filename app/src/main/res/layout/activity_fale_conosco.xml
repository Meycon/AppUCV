<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.catolica.salesianoapp.ucv.activity.FaleConoscoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarFaleConosco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:id="@+id/lnfaleconosco"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
        android:id="@+id/txtPara"
        android:text="secretaria@catolica-es.edu.br"
        android:enabled="true"
        android:maxLines="1"
        android:textStyle="bold"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:nextFocusDown="@id/txtAssunto"
        android:nextFocusForward="@id/txtAssunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Para"
        android:cursorVisible="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:focusable="false" />

    <EditText
        android:id="@+id/txtAssunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:hint="Assunto" />

    <EditText
        android:id="@+id/txtMensagem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:hint="Mensagem" />

    <Button
        android:id="@+id/btnOK"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Enviar" />

    </LinearLayout>



</LinearLayout>
