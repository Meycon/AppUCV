                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cálculo    "
                        android:textSize="20sp"
                        android:visibility="visible"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtNota7"
                        android:layout_width="wrap_content"
